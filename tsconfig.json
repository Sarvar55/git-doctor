{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "alwaysStrict": true,
    "importsNotUsedAsValues": "remove",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "build",
    "target": "ES6",
    "declaration": true,
    "declarationDir": "build/types",
    "declarationMap": true
  }
}
